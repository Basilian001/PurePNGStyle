body {
  font-family: sans-serif;
  margin: 0;
  padding: 0;
  background: #f5f5f5;
  color: #222;
}
header {
  background-color: #ffcc00;
  padding: 2rem;
  text-align: center;
}
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  padding: 1rem;
}
.product {
  background: white;
  padding: 1rem;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
.product img {
  width: 100%;
  border-radius: 6px;
}
footer {
  text-align: center;
  padding: 1rem;
  background-color: #333;
  color: white;
}
.socials a {
  margin: 0 10px;
  color: #ffcc00;
  text-decoration: none;
}
